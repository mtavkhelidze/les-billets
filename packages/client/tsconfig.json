{
    "compilerOptions": {
        "verbatimModuleSyntax": false,
        "baseUrl": ".",
        "paths": {
            "@blocks/*": [
                "src/blocks/*"
            ],
            "@config": [
                "src/config.ts"
            ],
            "@daemons": [
                "src/daemons/index.ts"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
            "@services": [
                "src/services/index.ts"
            ],
            "@state": [
                "src/state/index.ts"
            ],
            "@store": [
                "src/store/index.ts"
            ]
        }
    },
    "extends": [
        "../../tsconfig.json"
    ],
    "include": [
        "src",
        "vite.config.ts"
    ]
}
