{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "resolveJsonModule": true,
        "paths": {
            "@api": [
                "./src/api/index.ts"
            ],
            "@api/error": [
                "./src/api/error.ts"
            ],
            "@controllers": [
                "./src/controllers/index.ts"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@storage": [
                "./src/storage/index.ts"
            ],
            "@storage/*": [
                "./src/storage/*"
            ]
        }
    },
    "include": [
        "./server.ts",
        "./src"
    ]
}
